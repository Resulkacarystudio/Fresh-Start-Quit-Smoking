<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/bg101"

    tools:context=".kullaniciverileri_page">

    <!-- Kullanıcı Bilgileri CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/userDataCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:layout_margin="20dp"

        android:alpha="0.9"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Kaydırılabilir Alan -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"


            android:padding="24dp">

            <!-- Başlık Metni -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimation"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/veri" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biraz Bilgi Lazım"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_gravity="left"/>

            <!-- Günlük İçilen Sigara -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Günde Kaç Adet Sigara İçiyorsunuz?"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingBottom="6dp"
                android:gravity="left"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/KVgunlukicilensigara_Edittext"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Örn: 20"
                    android:inputType="number"
                    android:textColorHint="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Sigara Paketinde Kaç Adet Var -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sigara Paketinde Kaç Adet Sigara Var?"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingBottom="6dp"
                android:gravity="left"
                android:layout_marginTop="12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/KVpakettekisigarasayisi_Edittext"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Örn: 20"
                    android:inputType="number"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Kaç Sene Sigara İçtiniz -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kaç Sene Sigara İçtiniz?"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingBottom="6dp"
                android:gravity="left"
                android:layout_marginTop="12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/KVsigaraicilenyil_Edittext"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Örn: 10"

                    android:inputType="number"
                    android:textColorHint="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Sigara Paketi Fiyatı -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sigara Paketi Fiyatı Ne Kadar?"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingBottom="6dp"
                android:gravity="left"
                android:layout_marginTop="12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/KVsigarapaketiFiyat_Edittext"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Örn: 70.00 TL"
                    android:inputType="numberDecimal"

                    android:textColorHint="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gizlilik Metni -->
            <TextView
                android:id="@+id/privacyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veriler kesinlikle kimseyle paylaşılmamakta olup, yalnızca telefon hafızasında saklanır. Uygulama silindiğinde ya da veriler temizlendiğinde kaybolur."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"/>

            <!-- Devam Edelim Butonu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/devamedelim_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/primaryColor"
                android:text="Devam Edelim"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
