<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/o9"
    tools:context=".sigarayibirakma_ilkadim">

    <!-- ScrollView ekleniyor -->
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- İçerikler için LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/rklogo" />

            <!-- Ana Başlık -->
            <TextView
                android:id="@+id/sloganText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"

                android:gravity="left"
                android:paddingHorizontal="10dp"
                android:text="Sigarayı\nBırakmak İçin\nİlk Adımı Beraber Atalım"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Alt Açıklama -->
            <TextView
                android:id="@+id/subSloganText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:paddingHorizontal="10dp"
                android:text="Daha Fazla Enerji, Daha Uzun ve Mutlu Bir Yaşam!"
                android:textColor="#CCFFFFFF"
                android:textSize="18sp"
                android:textStyle="italic" />

            <!-- Hadi Başlayalım Butonu -->
            <Button
                android:id="@+id/hadibaslayalim_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_button"
                android:paddingVertical="12dp"
                android:text="Hadi Başlayalım"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
